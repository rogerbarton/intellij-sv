<idea-plugin>
    <id>com.github.rogerbarton.intellijsv</id>
    <name>System Verilog</name>
    <vendor>Roger Barton</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="System Verilog File" implementationClass="com.github.rogerbarton.intellijsv.SvFileType"
                  fieldName="INSTANCE" language="System Verilog" extensions="sv"/>

        <lang.parserDefinition language="System Verilog"
                               implementationClass="com.github.rogerbarton.intellijsv.core.psi.SvParserDefinition"/>

        <lang.syntaxHighlighterFactory language="System Verilog"
                                       implementationClass="com.github.rogerbarton.intellijsv.core.SvSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.github.rogerbarton.intellijsv.ide.colors.SvColorSettingsPage"/>
        <lang.commenter language="System Verilog" implementationClass="com.github.rogerbarton.intellijsv.ide.SvCommenter"/>
        <completion.contributor language="System Verilog" implementationClass="com.github.rogerbarton.intellijsv.ide.SvCompletionContributor"/>
    </extensions>
</idea-plugin>
