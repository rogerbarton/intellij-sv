<idea-plugin>
    <id>com.github.rogerbarton.intellijsv</id>
    <name>System Verilog</name>
    <vendor>Roger Barton</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">

        <fileType name="System Verilog File" implementationClass="com.github.rogerbarton.intellijsv.SvFileType"
                  fieldName="INSTANCE" language="Sv" extensions="sv"/>

        <lang.parserDefinition language="Sv"
                               implementationClass="com.github.rogerbarton.intellijsv.core.psi.SvParserDefinition"/>

        <lang.syntaxHighlighterFactory language="Sv"
                                       implementationClass="com.github.rogerbarton.intellijsv.SvSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.github.rogerbarton.intellijsv.core.SvColorSettingsPage"/>
    </extensions>
</idea-plugin>
